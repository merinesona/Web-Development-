  // ===== HELPERS =====
  const money = n => `â‚¹${n}`;
  const waLink = ({catalogue, product}) => `https://wa.me/${WA}?text=${encodeURIComponent(
    `Hi Aura, I want to order from ${catalogue}:\nProduct: ${product.n}\nUnit Price: â‚¹${product.p}\nShipping: â‚¹${product.s}\nTotal per unit: â‚¹${product.p + product.s}\nCustomisation: (names/colors/quote)\nQuantity: 1\nAddress:`)}`;
  const waCustom = ({catalogue, product}) => `https://wa.me/${WA}?text=${encodeURIComponent(
    `Hi Aura, I want to customise ${product.n} from ${catalogue}. Here are my ideas:`)}`;

  function makeCard(product, catalogue){
    const card = document.createElement('article');
    card.className = 'card';
    const total = product.p + product.s;
    card.innerHTML = `
      <div class="cover" style="background-image:url('${product.img || 'images/placeholder.jpg'}')"></div>
      <div class="body">
        <div class="name">${product.n}</div>
        <div class="meta">Price ${money(product.p)} â€¢ Shipping ${money(product.s)}${product.free? ' â€¢ Free stand':''}</div>
      </div>
      <div class="price">
        <span class="pill">Total: ${money(total)}</span>
        ${product.note? `<span class='pill'>${product.note}</span>`:''}
        ${product.s===0? `<span class='pill'>Free Shipping</span>`:''}
      </div>
      <div class="actions">
        <a class="btn-w" href="${waLink({catalogue, product})}" target="_blank" rel="noopener">Order on WhatsApp</a>
        <a class="btn-s" href="${waCustom({catalogue, product})}" target="_blank" rel="noopener">Customise via WhatsApp</a>
      </div>`;
    return card;
  }

  // mount lists
  function mountList(containerId, items, catalogue){
    const root = document.getElementById(containerId);
    items.forEach(it => root.appendChild(makeCard(it, catalogue)));
  }
  mountList('list-photo', photoItems, 'Photo Printing');
  mountList('list-resin', resinItems, 'Resin Products');
  mountList('list-letters', letterItems, 'Custom Letters');

  // year
  document.getElementById('yr').textContent = new Date().getFullYear();

  // ===== CAROUSEL LOGIC =====
  const slides = document.getElementById('slides');
  const dots = document.getElementById('dots');
  const totalSlides = slides.children.length;
  let idx = 0, timer;

  function renderDots(){
    dots.innerHTML = '';
    for(let i=0;i<totalSlides;i++){
      const d = document.createElement('div');
      d.className = 'dot'+(i===idx?' active':'');
      d.onclick = ()=> go(i);
      dots.appendChild(d);
    }
  }
  function go(i){
    idx = (i+totalSlides)%totalSlides;
    slides.style.transform = `translateX(-${idx*100}%)`;
    renderDots();
  }
  function next(){ go(idx+1) }
  function prev(){ go(idx-1) }
  document.getElementById('next').onclick = next;
  document.getElementById('prev').onclick = prev;
  renderDots();
  go(0);
  function auto(){ clearInterval(timer); timer = setInterval(next, 3800) }
  auto();
  slides.addEventListener('mouseenter', ()=>clearInterval(timer));
  slides.addEventListener('mouseleave', auto);
  // swipe
  let sx=0; slides.addEventListener('touchstart',e=>sx=e.touches[0].clientX,{passive:true});
  slides.addEventListener('touchend',e=>{const dx=e.changedTouches[0].clientX-sx; if(Math.abs(dx)>40){dx<0?next():prev()}},{passive:true});

  // open section from slide
  function openSection(hash){
    document.querySelector(hash).scrollIntoView({behavior:'smooth', block:'start'});
  }
  window.openSection = openSection;
</script>
